# GLPI_BACKEND_HOST=192.168.10.50
# GLPI_BACKEND_PORT=8080
#
# # Zabbix (hôte distant)
# ZABBIX_BACKEND_HOST=zabbix.internal
# ZABBIX_BACKEND_PORT=8080
