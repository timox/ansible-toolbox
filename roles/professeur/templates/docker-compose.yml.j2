services:
  nginx:
    image: nginx:alpine
    container_name: professeur-nginx
    ports:
{% if professeur_tls_enabled | default(false) %}
      - "80:80"
      - "443:443"
{% else %}
      - "{{ professeur_port }}:80"
{% endif %}
    volumes:
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
{% if professeur_tls_enabled | default(false) %}
      - /data/professeur/letsencrypt:/etc/letsencrypt:ro
      - /data/professeur/certbot-webroot:/var/www/certbot:ro
{% endif %}
    depends_on:
      rdr-observation:
        condition: service_started
      keycloak:
        condition: service_healthy
    networks:
      - professeur-net
    restart: unless-stopped

  rdr-observation:
    build:
      context: ./src/rdr-observation
      dockerfile: Dockerfile
    container_name: professeur-rdr
    environment:
      - NODE_ENV=production
      - PORT=3000
      - SQLITE_PATH=/data/data.sqlite
    volumes:
      - /data/professeur/sqlite:/data
    networks:
      - professeur-net
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "-q", "--spider", "http://localhost:3000/api/substances"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s

  keycloak-db:
    image: postgres:15-alpine
    container_name: professeur-keycloak-db
    environment:
      - POSTGRES_DB=keycloak
      - POSTGRES_USER=keycloak
      - POSTGRES_PASSWORD={{ professeur_keycloak_db_password }}
    volumes:
      - /data/professeur/keycloak-db:/var/lib/postgresql/data
    networks:
      - professeur-net
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U keycloak"]
      interval: 10s
      timeout: 5s
      retries: 5

  keycloak:
    image: quay.io/keycloak/keycloak:26.0.7
    container_name: professeur-keycloak
    environment:
      - KEYCLOAK_ADMIN={{ professeur_keycloak_admin }}
      - KEYCLOAK_ADMIN_PASSWORD={{ professeur_keycloak_admin_password }}
      - KC_DB=postgres
      - KC_DB_URL_HOST=keycloak-db
      - KC_DB_URL_PORT=5432
      - KC_DB_URL_DATABASE=keycloak
      - KC_DB_USERNAME=keycloak
      - KC_DB_PASSWORD={{ professeur_keycloak_db_password }}
      - KC_HTTP_RELATIVE_PATH=/auth
      - KC_PROXY_HEADERS=xforwarded
      - KC_HTTP_ENABLED=true
      - KC_HEALTH_ENABLED=true
      - KC_LEGACY_OBSERVABILITY_INTERFACE=true
{% if professeur_tls_enabled | default(false) %}
      - KC_HOSTNAME=https://{{ professeur_domain }}
{% else %}
      - KC_HOSTNAME_STRICT=false
{% endif %}
    command: start-dev --import-realm
    volumes:
      - ./realm-import:/opt/keycloak/data/import:ro
    depends_on:
      keycloak-db:
        condition: service_healthy
    networks:
      - professeur-net
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "exec 3<>/dev/tcp/localhost/8080"]
      interval: 10s
      timeout: 5s
      retries: 15
      start_period: 30s

{% if professeur_tls_enabled | default(false) %}
  certbot:
    image: certbot/certbot
    container_name: professeur-certbot
    volumes:
      - /data/professeur/letsencrypt:/etc/letsencrypt
      - /data/professeur/certbot-webroot:/var/www/certbot
    entrypoint: "/bin/sh -c 'trap exit TERM; while :; do certbot renew; sleep 12h & wait $${!}; done'"
