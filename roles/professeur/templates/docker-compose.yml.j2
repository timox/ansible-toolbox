services:
  nginx:
    image: nginx:alpine
    container_name: professeur-nginx
    ports:
      - "{{ professeur_port }}:80"
    volumes:
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
    depends_on:
      - rdr-observation
    networks:
      - professeur-net
    restart: unless-stopped

  rdr-observation:
    build:
      context: ./src/rdr-observation
      dockerfile: Dockerfile
    container_name: professeur-rdr
    environment:
      - NODE_ENV=production
      - PORT=3000
      - SQLITE_PATH=/data/data.sqlite
    volumes:
      - /data/professeur/sqlite:/data
    networks:
      - professeur-net
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "-q", "--spider", "http://localhost:3000/api/substances"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s

