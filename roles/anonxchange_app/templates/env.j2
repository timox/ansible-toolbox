# {{ ansible_managed }}
# anonXchange production environment

NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgres://{{ app_postgres_user }}:{{ app_postgres_password }}@db:5432/{{ app_postgres_db }}
POSTGRES_USER={{ app_postgres_user }}
POSTGRES_PASSWORD={{ app_postgres_password }}
POSTGRES_DB={{ app_postgres_db }}

# Object storage
OBJECT_STORAGE_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY={{ app_minio_access_key }}
MINIO_SECRET_KEY={{ app_minio_secret_key }}
MINIO_BUCKET=anonxchange-archives

# Monero
WALLET_RPC_URL=http://wallet-rpc:28082/json_rpc
MONERO_NETWORK={{ anonxchange_monero_network }}
MONERO_DAEMON={{ app_monero_daemon }}
TENANT_WALLET_ADDRESS={{ app_tenant_wallet_address }}

# Secrets
CHALLENGE_HMAC_SECRET={{ app_challenge_hmac_secret }}
API_SECRET_MASTER_KEY={{ app_api_secret_master_key }}
ADMIN_SESSION_SECRET={{ app_admin_session_secret }}
TENANT_PGP_PRIVATE_KEY="{{ app_tenant_pgp_private_key }}"

# Tor
ONION_HOST={{ app_onion_host }}
XMR_PRICE_USD={{ anonxchange_xmr_price_usd }}
XMR_PRICE_EUR={{ anonxchange_xmr_price_eur }}
BRAND_SERVER_HEADER=

# Notifications
NOTIFIER_URL=http://simplex-notifier:3001
SOCKS_PROXY=tor-proxy:9050
BRAND_NAME={{ anonxchange_brand_name }}

# Data retention
DATA_RETENTION_DAYS={{ anonxchange_data_retention_days }}

# Commission & auto-finalization
BASE_COMMISSION_RATE={{ anonxchange_base_commission_rate }}
AUTO_FINALIZE_DEFAULT_DAYS={{ anonxchange_auto_finalize_default_days }}
