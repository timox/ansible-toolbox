# =============================================================================
# LINSHARE - Partage de fichiers securise (OIDC natif)
# =============================================================================
# Generated by Ansible role: oauth2_proxy (conditional on deploy_linshare)

server {
    listen 443 ssl;
    http2 on;
    server_name {{ linshare_hostname_resolved }};

    ssl_certificate /certs/wildcard.{{ domain }}.crt;
    ssl_certificate_key /certs/wildcard.{{ domain }}.key;

    client_max_body_size 100M;
    client_body_timeout 300s;
    proxy_request_buffering off;

    # Interface utilisateur LinShare
    location / {
        proxy_pass http://linshare-ui-user:80;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
        proxy_send_timeout 300s;
    }

    # API Backend LinShare
    location /linshare/ {
        proxy_pass http://linshare-backend:8080/linshare/;
        proxy_set_header Host $host;
        proxy_read_timeout 300s;
        proxy_send_timeout 300s;
    }
}
